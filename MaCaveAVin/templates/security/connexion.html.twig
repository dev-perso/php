{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Connexion</h1>
        <div class="row">
            <div class="offset-3 col-6">
                <form action="{{ path('connexion') }}" method="post">
                    <div class="form-group">
                        <label for="_username">Username</label>
                        <input type="text" clas="form-control" required name="_username">
                    </div>
                    <div class="form-group">
                        <label for="_password">Password</label>
                        <input type="password" clas="form-control" required name="_password">
                    </div>
                    <div class="form-group">
                        <button type="submit" clas="btn btn-light">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
{% endblock %}