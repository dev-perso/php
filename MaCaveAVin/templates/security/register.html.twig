{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-3">Inscription</h1>
        {{ form_start(form) }}
            <div class="row">
                <div class="offset-lg-3 col-lg-6 p-3" style="border : 1px solid lightgrey; border-radius : 5px; background-color : #eeeeee">
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.nom, {'attr' : {'placeholder' : 'Nom'}}) }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.prenom, {'attr' : {'placeholder' : 'Pr√©nom'}}) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(form.email, {'attr' : {'placeholder' : 'Email'}}) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.confirm_email, {'attr' : {'placeholder' : 'Confirmation de l\'Email'}}) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            {{ form_row(form.username, {'attr' : {'placeholder' : 'Utilisateur'}}) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.password, {'attr' : {'placeholder' : 'Mot de passe'}}) }}
                        </div>
                        <div class="col-12">
                            {{ form_row(form.confirm_password, {'attr' : {'placeholder' : 'Confirmation mot de passe'}}) }}
                        </div>
                    </div>
                    <div class="col-12 text-right">
                        <button class="btn btn-light"><i class="fa fa-plus"></i> {{ button|default('Inscription') }}</button>
                    </div>
                </div>
                {{ form_rest(form) }}
            </div>
        {{ form_end(form) }}
    </div>

{% endblock %}