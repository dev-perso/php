{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
{% endblock %}

{% block body %}

    <div class="container main">

        {# Ligne accès à la cave #}
        <div class="row">
            <div class="col-12 cave" id="caveBtn">
                Ma cave
            </div>
        </div>

        {# Ligne accès au profil ou aux archives #}
        <div class="row secondRow">

            {# Profil #}
            <div class="col-6">
                <div class="profile" id="profileBtn">
                    Profil
                </div>
            </div>

            {# Archives #}
            <div class="col-6 archive" id="archiveBtn">
                Déjà bu
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}