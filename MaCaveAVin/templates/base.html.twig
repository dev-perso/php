<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">

        <title>
            {% block title %}La Cave à Vin!{% endblock %}
        </title>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <!-- font-family: 'Lobster', cursive; -->
        <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">
        <!-- font-family: 'Roboto', ; -->
        <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
        
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/base.css') }}">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar-light text-center navAjustement">
            <div class="row">
                <div class="col-2 profil">
                    {% if app.user %}
                        <div class="row rowProfil">
                            <div class="col-6 text-right profilImg">
                                <a class="profilBtn" title="Profil" href="{{ path('gestion.profil') }}">
                                    <img src="{{ asset('img/login.svg') }}"
                                         height="40px"
                                         width="40px" />
                                </a>
                            </div>
                            <div class="col-6 text-left profilTxt">
                                <div class="col-12">
                                    {{ app.user.prenom | capitalize }}
                                </div>
                                <div class="col-12">
                                    {{ app.user.nom | capitalize }}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
                <div class="col-8">
                    <a href="{{ path('caveavin') }}" class="navbar-brand mb-0 h1">La Cave à Vin</a>
                </div>

                {# Connexion / Déconnexion #}
                {% if app.user %}
                    <div class="col-2 deconnexion">
                        <a class="connexionBtn" title="Déconnexion" href="{{ path('deconnexion') }}">
                            <img src="{{ asset('img/logout.svg') }}"
                                height="30px" 
                                width="30px" />
                        </a>
                    </div>
                {% else %}
                    <div class="col-2 connexion">
                        <a class="connexionBtn" title="Connexion" href="{{ path('connexion') }}">
                            <img src="{{ asset('img/login.svg') }}"
                                height="30px" 
                                width="30px" />
                        </a>
                    </div>
                {% endif %}

            </div>
        </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}

        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
</html>
