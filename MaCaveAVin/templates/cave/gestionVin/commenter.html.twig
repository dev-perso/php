{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/macave.css') }}">
{% endblock %}

{% block body %}
    <div class="container mb-5">
        <h1 class="mt-3 mb-3">A propos de : {{ vin.appellation }}</h1>
        {{ form_start(form) }}
            <div class="row">
                <div class="offset-lg-3 col-lg-6 p-3" style="border : 1px solid lightgrey; border-radius : 5px; background-color : #eeeeee">
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="col-sm-12">
                            {{ form_row(form.note) }}
                        </div>
                        <div class="col-6">
                            <button class="btn btn-light">
                                <i class="fa fa-chevron-left"></i> Retour
                            </button>
                        </div>
                        <div class="col-6 text-right">
                            <button class="btn btn-light"><i class="fa fa-pencil"></i> {{ button|default('Commenter') }}</button>
                        </div>
                    </div>
                </div>
                {{ form_rest(form) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}