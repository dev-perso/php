{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/use.css') }}">
{% endblock %}

{% block body %}
    <div class="imgDeco"></div>
    <div class="container mb-5">
        {{ form_start(form) }}
            <div class="row">
                <div class="offset-lg-3 col-lg-6 p-3 mt-4 cellForm">
                    <h3 class="mt-3 mb-3 text-center">Utiliser : {{ vin.appellation }}</h3>
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <label for="note" class="labelNote">Note</label>
                            {% for i in 1..5 %}
                                <img src="{{ asset('img/empty-star.png') }}" width="40px" height="40px" id="star-{{ i }}" data-value="{{ i }}">
                            {% endfor %}
                            <input type="hidden" name="vote" id="vote" value="">
                        </div>
                        <div class="col-sm-12">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="col-12 text-center">
                            {{ form_row(form.use) }}
                        </div>
                    </div>
                </div>
                {{ form_rest(form) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/use.js') }}"></script>
{% endblock %}