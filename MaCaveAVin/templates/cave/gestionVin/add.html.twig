{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/add.css') }}">
{% endblock %}

{% block body %}
    <img class="imgDeco" src="{{ asset('img/corner.png') }}">
    <div class="container mb-5">
        {{ form_start(form) }}
            <div class="row">
                <div class="offset-lg-3 col-lg-6 p-3 mt-4 cellForm">
                    <h3 class="mt-3 mb-3 text-center">Ajouter un vin</h3>
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_row(form.appellation, {'attr' : {'placeholder' : 'Appellation du vin'}}) }}
                        </div>
                        <div class="col-sm-12 mb-3">
                            <label for="vin_id_domaine">Domaine</label>
                            <input type="text" id="vin_id_domaine" name="domaine" placeholder="Domaine du vin" class="selectDomaine form-control">
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.id_couleur, {'attr' : {'class' : 'selectColor', }}) }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.id_region, {'attr' : {'class' : 'selectRegion '}}) }}
                        </div>
                        <div class="col-xl-4">
                            {{ form_row(form.annee, {'attr' : {'class' : 'selectAnnee '}}) }}
                        </div>
                        <div class="col-xl-4 form-group">
                            <label for="cave_quantite" required="required">Quantité</label>
                            <input type="number" id="cave_quantite" required="required" name="quantite" class="form-control">
                        </div>
                        <div class="col-xl-4">
                            <div class="input-group">
                                <label for="cave_prix" class="required">Prix</label>
                                <div class="input-group mb-3">
                                    <input type="text" id="cave_prix" name="prix" class="form-control" aria-label="montant en Euros">
                                    <div class="input-group-append">
                                        <span class="input-group-text">€</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 form-group">
                            <div class="custom-file">
                                {{ form_row(form.cave) }}
                            </div>
                        </div>

                        {# Preview #}
                        <div id="preview" class="mt-3 col-sm-12 text-center">
                            <img src="" width="200px" height="200px" id="previewImg" style="display:none">
                        </div>

                    </div>
                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <button class="btnAdd">
                                {{ button|default('Ajouter') }}
                            </button>
                        </div>
                    </div>
                </div>
                {{ form_rest(form) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/add.js') }}"></script>
{% endblock %}