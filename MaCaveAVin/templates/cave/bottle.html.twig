{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bottle.css') }}">
{% endblock %}

{% block body %}
    {% set tmpregion = wine.getEntityRegion.getRegion() | split(' ') %}
    {% if tmpregion[1] is defined %}
        {% set region = tmpregion[0] ~ tmpregion[1] %}
    {% else %}
        {% set region = tmpregion[0] %}
    {% endif %}

    <div class="jumbotron {{ region }}">

    </div>

    <div class="container mt-4">
        <div class="row">
            <div class="col-4 wineImg text-center">
                <img src="{{ asset('img/wines/' ~ userWine.image) }}"
                     height="400px"
                     width="300px"
                     class="dropdown-toggle profileImg"
                     id="dropdownMenuButton"/>
            </div>
            <div class="col-8">
                <div class="col-12 noteDescribe">
                    {% if userWine.getNote() is not empty %}
                        {% set empty_star = 5 - userWine.getNote() %}
                        {{ userWine.getNote() }} Note basée sur le millésime {{ wine.getAnnee() }}
                        <br>
                        {% for i in 1..userWine.getNote() %}
                            <img src="{{ asset('img/star.png') }}" width="40px" height="40px">
                        {% endfor %}
                        {% for i in 1..empty_star %}
                            <img src="{{ asset('img/empty-star.png') }}" width="40px" height="40px">
                        {% endfor %}
                    {% else %}
                        Vous n'avez pas encore assigné de note à ce vin
                    {% endif %}
                </div>
                <div class="col-12 priceDescribe">
                    {% if userWine.getPrix() is not empty %}
                        {{ userWine.getPrix() }} €
                    {% else %}
                        Vous n'avez pas encore renseigné de prix à ce vin
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="col-12">
                    Quantité : {{ userWine.getQuantite() }}
                </div>
                <div class="col-12">
                    Description : {{ userWine.getDescription() }}
                </div>
                <div class="col-12">
                    Région : {{ userWine.getEntityVin().getEntityRegion().getRegion() }}
                    Région : {{ wine.getEntityRegion().getRegion() }}
                </div>
                <div class="col-12">
                    Domaine : {{ userWine.getEntityVin().getEntityDomaine().getDomaine() }}
                    Domaine : {{ wine.getEntityDomaine().getDomaine() }}
                </div>
                <div class="col-12">
                    Couleur : {{ userWine.getEntityVin().getEntityCouleur().getCouleur() }}
                    Couleur : {{ wine.getEntityCouleur().getCouleur() }}
                </div>
                <div class="col-12">
                    Appellation : {{ userWine.getEntityVin().getAppellation() }}
                    Appellation : {{ wine.getAppellation() }}
                </div>
                <div class="col-12">
                    Année : {{ userWine.getEntityVin().getAnnee() }}
                    Année : {{ wine.getAnnee() }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}